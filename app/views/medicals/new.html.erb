<%= form_for(@medical_record) do |f| %>
    <section class="py-10 lg:py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-md mx-auto">
          
          <div class="mb-6 lg:mb-10 text-center">
            <div class="mb-6">
              <h3 class="text-2xl font-bold">Medical Information</h3>
            </div>
            <form action="">
              <div class="flex flex-wrap -mx-2"> 
                <div class="mb-3 w-full lg:w-1/2 px-2">
                <div class="mt-4 space-y-4">
                <label class="block text-left text-sm font-bold text-gray-700" for="c_password">
                Sterilization:
                </label>
                <div class="flex items-center">
                  <%= f.radio_button(:sterilization, "true")%> 
                  <label for="sterilization" class="ml-1 block text-sm font-medium text-gray-700">
                    Yes
                  </label>
                </div>
                <div class="flex items-center">
                  <%= f.radio_button(:sterilization, "false")%> 
                  <label for="sterilization" class="ml-1 block text-sm font-medium text-gray-700">
                    No 
                  </label>
                </div>
              </div>
                </div>
               
              </div>
              <%= f.text_field :sterilization_date, autofocus: true, autocomplete: "sterilization_date", placeholder: "dd/mm/yy", type: :date, :class=>"w-full mb-3 px-3 py-1.5 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>

            <div class="flex flex-wrap -mx-2">
            <div class="mb-3 w-full lg:w-1/2 px-2">
            <%= f.text_field :allergies, autofocus: true, autocomplete: "allergies", placeholder: "Allergies", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="mb-3 w-full lg:w-1/2 px-2">
            <%= f.text_field :others, autofocus: true, autocomplete: "others", placeholder: "Others", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            </div>
          </div>
          <%= f.text_field :clinic, autofocus: true, autocomplete: "clinic", placeholder: "Clinic", :class=>"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
 
              <div class="text-center mt-5">
          <%= f.submit "Submit", :class=> "text-gray-900 w-full cursor-pointer flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-500 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <%end%>