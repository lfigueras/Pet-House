<%= form_for(@body_markings) do |f| %>
<section class="py-10 lg:py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-md mx-auto">
      
      <div class="mb-6 lg:mb-10 text-center">
        <div class="mb-6">
          <h3 class="text-2xl font-bold">Body Markings</h3>
        </div>
        <form action="">
          <div class="flex flex-wrap -mx-2">
            <div class="mb-3 w-full lg:w-1/2 px-2">
            <%= f.text_field :coat_color, autofocus: true, autocomplete: "coat_color", placeholder: "Coat color", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="mb-3 w-full lg:w-1/2 px-2">
            <%= f.text_field :fur_type, autofocus: true, autocomplete: "fur_type", placeholder: "Fur Type", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            </div>
          </div>
          <div class="flex flex-wrap -mx-2">
          <div class="mb-3 w-full lg:w-1/2 px-2">
          <%= f.text_field :eye_color, autofocus: true, autocomplete: "eye_color", placeholder: "Eye color", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="mb-3 w-full lg:w-1/2 px-2">
          <%= f.text_field :length_height, autofocus: true, autocomplete: "length_height", placeholder: "Lenght or Height", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
          </div>
        </div>
        <div class="flex flex-wrap -mx-2">
        <div class="mb-3 w-full lg:w-1/2 px-2">
        <%= f.text_field :weight, autofocus: true, autocomplete: "weight", placeholder: "Weight", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-3 w-full lg:w-1/2 px-2">
        <%= f.text_field :special_markings, autofocus: true, autocomplete: "special_markings", placeholder: "Special markings", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
        </div>
      </div>
          
          <div class="text-center">
      <%= f.submit "Submit", :class=> "text-gray-900 w-full cursor-pointer flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-500 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<%end%>