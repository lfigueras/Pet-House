<body class="bg-gray-100">
<% if resource.errors.any? %>
<div class="text-white px-6 py-4 border-0 rounded relative max-w-sm mt-5 mx-auto mb-4 bg-red-500 modal"  >

<span class="inline-block align-middle mr-8">
<p><strong>You got <%= pluralize(resource.errors.count, 'error') %>.</strong></p>
<% resource.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
  <% end %>
</span>

</div>
<% end %>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<!-- Container -->
		<div class="container mx-auto ">
		
			<div class="flex justify-center px-6 my-12">
				<!-- Row -->
				<div class="w-full xl:w-3/4 lg:w-11/12 flex shadow-md rounded-md">
					<!-- Col -->
					<div
						class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
						style="background-image: url('https://source.unsplash.com/Mv9hjnEUHR4/600x800')"
					></div>
					<!-- Col -->
					<div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
						<h3 class="pt-4 text-2xl text-center pb-5 font-bold">Create an Account!</h3>
						<%= render "shared/alert" %>
						<form class="px-8 pt-6 pb-8 mb-4 bg-white rounded">
							<div class="mb-4 md:flex md:justify-between">
								<div class="mb-4 md:mr-2 md:mb-0">
								<label class="block mb-2 text-sm font-bold text-gray-700" for="lastName">
								Owner's full name 
							</label>
							<%= f.text_field :owner, autofocus: true, autocomplete: "name", placeholder: "Your name", :class=>"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>

								</div>
								<div class="md:ml-2">
								<label class="block mb-2 text-sm font-bold text-gray-700" for="lastName">
								Contact number
							</label>
							<%= f.text_field :contact, autofocus: true, autocomplete: "contact_number", placeholder: "Active phone #", :class=>"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>


								</div>
                <div class="md:ml-2">
								<label class="block mb-2 text-sm font-bold text-gray-700" for="firstName">
								Pet Name
							</label>
							<%= f.text_field :pet_name, autofocus: true, autocomplete: "pet_name", placeholder: "Name", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>

									</div>
							</div>
							<div class="mb-4 md:flex md:justify-between">
							<div class="mb-4 md:mr-2 md:mb-0">
								<label class="block mb-2 text-sm font-bold text-gray-700" for="firstName">
									Pet Breed
								</label>
								<%= f.text_field :breed, autofocus: true, autocomplete: "breed", placeholder: "Sample: Labrador", :class=>"form-control w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
							</div>
							<div class="md:ml-2">
								<label class="block mb-2 text-sm font-bold text-gray-700" for="lastName">
									Pet Gender
								</label>
								<%= f.select(:gender, ['Male','Female'], {}, { :class=> "w-full shadow h-9 px-3 text-sm text-gray-500 placeholder-gray-600 border rounded focus:shadow-outline" }) %>
								</div>
							<div class="md:ml-2">
								<label class="block mb-2 text-sm font-bold text-gray-700" for="lastName">
									Pet Birth date
								</label>
								<%= f.text_field :birth_date, autofocus: true, autocomplete: "birth_date", placeholder: "mm/dd/yy", type: :date, :class=>"w-full px-3 py-1.5 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
								</div>
						</div>
							
							<div class="mb-4">
							<label class="block mb-2 text-sm font-bold text-gray-700" for="email">
							Owner's Email
						</label>
						<%= f.email_field :email,  autofocus: true, autocomplete: "email", placeholder: "youremail@account.co", :class=>" w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>

						</div>
              
							<div class="mb-4">
							<label class="block mb-2 text-sm font-bold text-gray-700" for="email">
								Address
							</label>
							<%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "Complete address", :class=>"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>

							</div>
							<div class="mb-4 md:flex md:justify-between">
								<div class="mb-4 md:mr-2 md:mb-0">
									<label class="block mb-2 text-sm font-bold text-gray-700" for="password">
										Password
									</label>
                  <%= f.password_field :password, autocomplete: "new-password", type:"password", placeholder:"******************", :class=>"w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border  rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>		
									<p class="text-xs text-pink-600 italic ">Please choose a password. Mininmum of 6 characters.</p>
								</div>
								<div class="md:ml-2">
									<label class="block mb-2 text-sm font-bold text-gray-700" for="c_password">
										Confirm Password
									</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", type:"password", placeholder:"******************", :class=>"w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border  rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>		

								</div>
							</div>
							<div class="mb-6 text-center">				
                <%= f.submit "Register account", :class=> "text-gray-900 w-full cursor-pointer flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-500 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

                </div>
							<hr class="mb-6 border-t" />
						
							<div class="text-center">
								<a
									class="inline-block text-sm font-medium text-indigo-600 hover:text-indigo-500"
									href="/users/sign_in"
								>
									Already have an account? Login!
								</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
  <% end %>
</body>

<script>
setTimeout(()=> {
	model = document.querySelector(".modal")
	model.remove()
 }, 3000);
console.log('deleted')
</script>