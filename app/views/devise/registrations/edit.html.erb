<% if resource.errors.any? %>
  <div class="text-white px-6 py-4 border-0 rounded relative max-w-sm mt-5 mx-auto mb-4 bg-red-500 modal"  >
  <span class="inline-block align-middle mr-8">
  <p><strong>You got <%= pluralize(resource.errors.count, 'error') %>.</strong></p>
  <% resource.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </span>
  
  </div>
  <% end %>

  <div class="container max-w-lg mx-auto bg-gray-100 p-10 rounded-lg shadow-lg my-5 ">

<h2 class="text-2xl my-4 font-bold text-center">Edit Profile</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="text-black">
  <label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Your Name:</label>
  <%= f.text_field :owner, autofocus: true, autocomplete: "owner", :class=> "w-full shadow h-10 px-3 text-sm text-gray-500 placeholder-gray-600 border rounded-lg focus:shadow-outline"  %>
</div>
<div class="text-black">
<label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Your Pet's Name:</label>
<%= f.text_field :pet_name, autofocus: true, autocomplete: "pet_name", :class=> "w-full shadow h-10 px-3 text-sm text-gray-500 placeholder-gray-600 border rounded-lg focus:shadow-outline"  %>
</div>
<div class="text-black">
<label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Your Pet's Birth Date:</label>

<%= f.text_field :birth_date, autofocus: true, autocomplete: "birth_date", placeholder: "mm/dd/yy", type: :date, :class=>"w-full shadow px-3 py-1.5 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>

</div>
<div class="text-black">
<label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Pet Gender:</label>
<%= f.select(:gender, ['Male','Female'], {}, { :class=> "w-full shadow h-10 px-3 text-sm text-gray-500 placeholder-gray-600 border rounded-lg focus:shadow-outline" }) %>
</div>
<div class="text-black">
<label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Breed:</label>
<%= f.text_field :breed, autofocus: true, autocomplete: "breed", :class=> "w-full shadow h-10 px-3 text-sm text-gray-500 placeholder-gray-600 border rounded-lg focus:shadow-outline"  %>
</div>
<div class="text-black">
<label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Contact Number:</label>
<%= f.text_field :contact, autofocus: true, autocomplete: "contact", :class=> "w-full shadow h-10 px-3 text-sm text-gray-500 placeholder-gray-600 border rounded-lg focus:shadow-outline"  %>
</div>
<div class="text-black">
<label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Complete Address:</label>
<%= f.text_field :address, autofocus: true, autocomplete: "address", :class=> "w-full shadow h-10 px-3 text-sm text-gray-500 placeholder-gray-600 border rounded-lg focus:shadow-outline"  %>
</div>

  <div class="text-black">
  <label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Email:</label>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=> "w-full shadow h-10 px-3 text-sm text-gray-500 placeholder-gray-600 border rounded-lg focus:shadow-outline"  %>
</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
  <label class="block mb-1 font-semibold" for="forms-labelOverInputCode">New Password:</label><i class="text-pink-600 text-xs">(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"******", :class=> "w-full shadow h-10 px-3 text-base placeholder-gray-600 border rounded-lg focus:shadow-outline" %>
    <% if @minimum_password_length %>
      <br />
      <em class="text-pink-600 text-xs"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
  <label class="block mb-1 font-semibold" for="forms-labelOverInputCode">New Password Confirmation:</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"******", :class=> "w-full shadow h-10 px-3 text-base placeholder-gray-600 border rounded-lg focus:shadow-outline" %>
  </div>

  <div class="field">
  <label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Current Password:</label><i class="text-pink-600 text-xs">(we need your current password to confirm your changes)</i></br>
    <%= f.password_field :current_password, autocomplete: "current-password",placeholder:"******",:class=> "w-full shadow h-10 px-3 text-base placeholder-gray-600 border rounded-lg focus:shadow-outline"  %>
  </div>

  <div class="actions">
    <%= f.submit "Update",  :class=> "my-3 text-gray-900 w-full shadow cursor-pointer flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-500 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>


<label class="block mb-1 font-semibold" for="forms-labelOverInputCode">Delete my account</label><i class="text-pink-600 text-xs">(Unhappy?)</i></br>


<p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class=> "text-white w-full shadow cursor-pointer flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-500 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %></p>


</div>
<script>
setTimeout(()=> {
	model = document.querySelector(".modal")
	model.remove()
 }, 3000);
console.log('deleted')
</script>